<script>
function calculate() {
  const volume = parseFloat(document.getElementById('volume').value) || 0;
  const transactions = parseFloat(document.getElementById('transactions').value) || 1;
  const onlinePercent = parseFloat(document.getElementById('online-percent').value) || 0;
  const loyaltyType = document.getElementById('loyalty-type').value;
  const discountBudget = parseFloat(document.getElementById('discount-budget').value) || 0;
  
  const avgTicket = volume / transactions;
  document.getElementById('avg-ticket').textContent = '$' + avgTicket.toFixed(2);
  
  const onlineRatio = onlinePercent / 100;
  const inStoreVolume = volume * (1 - onlineRatio);
  const onlineVolume = volume * onlineRatio;
  const inStoreTxns = transactions * (1 - onlineRatio);
  const onlineTxns = transactions * onlineRatio;
  
  // Square: 2.6% + $0.15 in-store, 2.9% + $0.30 online
  const squareInStore = (inStoreVolume * 0.026) + (inStoreTxns * 0.15);
  const squareOnline = (onlineVolume * 0.029) + (onlineTxns * 0.30);
  const squareProcessing = squareInStore + squareOnline;
  
  let loyaltySubscription = 0;
  let discountCost = 0;
  let loyaltyLabel = '';
  
  switch(loyaltyType) {
    case 'punch':
      loyaltySubscription = 0;
      discountCost = volume * (discountBudget / 100);
      loyaltyLabel = discountBudget + '% punch card redemptions';
      break;
    case 'square-low':
      loyaltySubscription = 45;
      discountCost = volume * (discountBudget / 100);
      loyaltyLabel = '$45 + ' + discountBudget + '% discounts';
      break;
    case 'square-mid':
      loyaltySubscription = 75;
      discountCost = volume * (discountBudget / 100);
      loyaltyLabel = '$75 + ' + discountBudget + '% discounts';
      break;
    case 'square-high':
      loyaltySubscription = 105;
      discountCost = volume * (discountBudget / 100);
      loyaltyLabel = '$105 + ' + discountBudget + '% discounts';
      break;
    case 'none':
      loyaltySubscription = 0;
      discountCost = volume * (discountBudget / 100);
      loyaltyLabel = discountBudget + '% discounts/comps';
      break;
  }
  
  const squareTotal = squareProcessing + loyaltySubscription + discountCost;
  const squareEffectiveRate = (squareTotal / volume) * 100;
  
  // joe: 2.5% in-store (no per-txn), 2.5% + $0.15 online
  const joeInStore = inStoreVolume * 0.025;
  const joeOnline = (onlineVolume * 0.025) + (onlineTxns * 0.15);
  const joeProcessing = joeInStore + joeOnline;
  const joeRewards = volume * 0.025;
  const joeMembership = 200;
  const joeTotal = joeProcessing + joeRewards + joeMembership;
  const joeEffectiveRate = (joeTotal / volume) * 100;
  
  const monthlySavings = squareTotal - joeTotal;
  const annualSavings = monthlySavings * 12;
  const rateDifference = squareEffectiveRate - joeEffectiveRate;
  
  document.getElementById('square-cost').textContent = '$' + squareTotal.toLocaleString('en-US', {minimumFractionDigits: 0, maximumFractionDigits: 0});
  document.getElementById('square-breakdown').textContent = '$' + Math.round(squareProcessing).toLocaleString() + ' processing + ' + loyaltyLabel;
  document.getElementById('square-rate').textContent = squareEffectiveRate.toFixed(1) + '% effective rate';
  
  document.getElementById('joe-cost').textContent = '$' + joeTotal.toLocaleString('en-US', {minimumFractionDigits: 0, maximumFractionDigits: 0});
  document.getElementById('joe-rate').textContent = joeEffectiveRate.toFixed(1) + '% effective rate';
  
  if (annualSavings > 0) {
    document.getElementById('annual-savings').textContent = '$' + annualSavings.toLocaleString('en-US', {minimumFractionDigits: 0, maximumFractionDigits: 0});
    document.getElementById('savings-detail').textContent = '$' + Math.round(monthlySavings).toLocaleString() + '/month ‚Ä¢ Lower effective rate by ' + rateDifference.toFixed(1) + '%';
  } else {
    document.getElementById('annual-savings').textContent = '$0';
    document.getElementById('savings-detail').textContent = 'Adjust your inputs to see savings';
  }
}

document.getElementById('volume').addEventListener('input', calculate);
document.getElementById('transactions').addEventListener('input', calculate);
document.getElementById('online-percent').addEventListener('input', calculate);
document.getElementById('loyalty-type').addEventListener('change', calculate);
document.getElementById('discount-budget').addEventListener('input', calculate);

calculate();
</script>
