---
layout: base.njk
---

<article class="pt-24">
  <header class="py-12 bg-gray-50">
    <div class="max-w-3xl mx-auto px-6">
      <nav class="text-sm text-gray-500 mb-6">
        <a href="/" class="hover:text-black">Home</a>
        <span class="mx-2">›</span>
        <a href="/blog/" class="hover:text-black">Blog</a>
        <span class="mx-2">›</span>
        <span class="text-gray-900">{{ title }}</span>
      </nav>
      
      <div class="flex items-center gap-3 mb-4">
        <span class="px-3 py-1 rounded-full text-sm font-medium bg-blue-50 text-blue-600">{{ category }}</span>
        <span class="text-gray-500">{{ date | dateFormat }}</span>
      </div>
      
      <h1 class="text-4xl md:text-5xl font-bold text-black mb-6 leading-tight">{{ title }}</h1>
      
      {% if excerpt %}
      <p class="text-xl text-gray-600 mb-8">{{ excerpt }}</p>
      {% endif %}
      
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 bg-gray-300 rounded-full"></div>
        <div>
          <p class="font-semibold text-black">{{ author }}</p>
        </div>
      </div>
    </div>
  </header>

  <div class="max-w-4xl mx-auto px-6 -mt-4 mb-12">
    <div class="aspect-video rounded-3xl flex items-center justify-center bg-gradient-to-br from-amber-600 to-orange-700">
      <span class="text-white text-6xl">☕</span>
    </div>
  </div>

  <div class="max-w-3xl mx-auto px-6 pb-16">
    <div class="prose max-w-none">
      {{ content | safe }}
    </div>
  </div>
</article>
