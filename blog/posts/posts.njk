---
layout: base.njk
permalink: /blog/{{ title | slugify }}/
---

<!-- Article Header -->
<article class="pt-24">
  <header class="py-12 bg-gray-50">
    <div class="max-w-3xl mx-auto px-6">
      <!-- Breadcrumb -->
      <nav class="text-sm text-gray-500 mb-6">
        <a href="/" class="hover:text-black">Home</a>
        <span class="mx-2">‚Ä∫</span>
        <a href="/blog/" class="hover:text-black">Blog</a>
        <span class="mx-2">‚Ä∫</span>
        <span class="text-gray-900">{{ title }}</span>
      </nav>
      
      <!-- Category & Date -->
      <div class="flex items-center gap-3 mb-4">
        <span class="px-3 py-1 rounded-full text-sm font-medium
          {% if category == 'shop-spotlight' %}bg-green-50 text-green-600
          {% elif category == 'coffee-tips' %}bg-blue-50 text-blue-600
          {% elif category == 'community' %}bg-green-50 text-green-600
          {% elif category == 'product-updates' %}bg-purple-50 text-purple-600
          {% else %}bg-gray-100 text-gray-600{% endif %}">
          {% if category == 'shop-spotlight' %}Shop Spotlight
          {% elif category == 'coffee-tips' %}Coffee Tips
          {% elif category == 'community' %}Community
          {% elif category == 'product-updates' %}Product Updates
          {% else %}{{ category }}{% endif %}
        </span>
        <span class="text-gray-500">{{ date | dateFormat }}</span>
      </div>
      
      <!-- Title -->
      <h1 class="text-4xl md:text-5xl font-bold text-black mb-6 leading-tight">
        {{ title }}
      </h1>
      
      <!-- Excerpt -->
      {% if excerpt %}
      <p class="text-xl text-gray-600 mb-8">
        {{ excerpt }}
      </p>
      {% endif %}
      
      <!-- Author -->
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 bg-gray-300 rounded-full"></div>
        <div>
          <p class="font-semibold text-black">{{ author }}</p>
        </div>
      </div>
    </div>
  </header>

  <!-- Featured Image -->
  <div class="max-w-4xl mx-auto px-6 -mt-4 mb-12">
    <div class="aspect-video rounded-3xl flex items-center justify-center
      {% if category == 'shop-spotlight' %}bg-gradient-to-br from-red-700 to-red-900
      {% elif category == 'coffee-tips' %}bg-gradient-to-br from-blue-600 to-indigo-700
      {% elif category == 'community' %}bg-gradient-to-br from-teal-600 to-emerald-700
      {% elif category == 'product-updates' %}bg-gradient-to-br from-purple-600 to-pink-600
      {% else %}bg-gradient-to-br from-amber-600 to-orange-700{% endif %}">
      <span class="text-white text-6xl">
        {% if category == 'shop-spotlight' %}üè™
        {% elif category == 'coffee-tips' %}‚òï
        {% elif category == 'community' %}üë•
        {% elif category == 'product-updates' %}üéÅ
        {% else %}‚òï{% endif %}
      </span>
    </div>
  </div>

  <!-- Article Content -->
  <div class="max-w-3xl mx-auto px-6 pb-16">
    <div class="prose max-w-none">
      {{ content | safe }}
    </div>
  </div>

  <!-- Share & Tags -->
  <div class="max-w-3xl mx-auto px-6 pb-12 border-b border-gray-100">
    <div class="flex flex-wrap items-center justify-between gap-4">
      <div class="flex gap-2">
        {% if category %}
        <span class="bg-gray-100 text-gray-600 px-3 py-1 rounded-full text-sm">{{ category }}</span>
        {% endif %}
      </div>
    </div>
  </div>
</article>

<!-- Related Posts -->
{% set posts = collections.posts %}
{% if posts.length > 1 %}
<section class="py-16 bg-gray-50 border-t border-gray-100">
  <div class="max-w-7xl mx-auto px-6">
    <h2 class="text-2xl font-bold text-black mb-8">More from the Blog</h2>
    
    <div class="grid md:grid-cols-3 gap-8">
      {% for post in posts | slice(0, 3) %}
      {% if post.url !== page.url %}
      <a href="{{ post.url }}" class="group">
        <div class="aspect-video rounded-2xl mb-4
          {% if post.data.category == 'shop-spotlight' %}bg-gradient-to-br from-red-700 to-red-900
          {% elif post.data.category == 'coffee-tips' %}bg-gradient-to-br from-blue-600 to-indigo-700
          {% elif post.data.category == 'community' %}bg-gradient-to-br from-teal-600 to-emerald-700
          {% elif post.data.category == 'product-updates' %}bg-gradient-to-br from-purple-600 to-pink-600
          {% else %}bg-gradient-to-br from-gray-700 to-gray-900{% endif %}">
        </div>
        <h3 class="font-bold text-black mb-2 group-hover:underline">{{ post.data.title }}</h3>
        <p class="text-gray-500 text-sm">{{ post.data.date | shortDate }}</p>
      </a>
      {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}
