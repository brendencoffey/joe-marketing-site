# Security Headers for joe.coffee
# Place this file in the root of your site (next to netlify.toml)

/*
  # Prevent clickjacking - stops your site from being embedded in iframes
  X-Frame-Options: DENY
  
  # Prevent MIME type sniffing attacks
  X-Content-Type-Options: nosniff
  
  # Control referrer information sent to other sites
  Referrer-Policy: strict-origin-when-cross-origin
  
  # XSS Protection for older browsers
  X-XSS-Protection: 1; mode=block
  
  # Restrict browser features
  Permissions-Policy: geolocation=(self), microphone=(), camera=(), payment=()

# API endpoints - prevent caching of sensitive data
/.netlify/functions/*
  Cache-Control: no-store, no-cache, must-revalidate
  Pragma: no-cache

# CRM pages - extra protection
/crm/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Cache-Control: no-store, private
