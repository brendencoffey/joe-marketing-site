        .service-card .icon { font-size: 2.5rem; flex-shrink: 0; }
        .service-card h4 { font-size: 1.25rem; margin: 0 0 0.5rem 0; color: var(--white); }
        .service-card p { font-size: 0.9rem; color: var(--gray-400); line-height: 1.6; margin: 0; }

        /* Coming Soon Badge */
