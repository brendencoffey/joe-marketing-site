        .mobile-menu-btn span {
            display: block;
            width: 24px;
            height: 2px;
            background: var(--gray-900);
            transition: all 0.3s ease;
        }
        .mobile-menu {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: var(--white);
            z-index: 999;
            padding: 100px 2rem 2rem;
            transform: translateX(100%);
