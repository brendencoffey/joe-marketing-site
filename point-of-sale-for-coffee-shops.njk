        .product-card li::before { content: '‚úì'; color: #22c55e; font-weight: bold; font-size: 0.75rem; }

        /* Highlight Card */
        .product-card.highlight {
            background: var(--gray-900);
            color: var(--white);
            border: none;
            grid-column: span 2;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            align-items: center;
        }
        @media (max-width: 1000px) { .product-card.highlight { grid-column: span 2; } }
        @media (max-width: 600px) { .product-card.highlight { grid-column: span 1; grid-template-columns: 1fr; } }
        .product-card.highlight h3 { color: var(--white); font-size: 1.5rem; }
        .product-card.highlight p { color: var(--gray-400); }
        .product-card.highlight .category { color: var(--gray-400); }
        .product-card.highlight li { color: var(--gray-300); }
        .highlight-stats {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
